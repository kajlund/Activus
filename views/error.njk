{% extends "layouts/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/css/error.css" />
{% endblock %}

{% block main %}
<section class="error">
  <h1>Oops!</h1>
  <h2>{{error.statusCode}} - {{error.message}}</h2>

  <div class="detail">
    {% if error.details %}
      <p>{{error.details}}</p>
    {% else %}
      <p>Sorry, no furher information was given.</p>
    {% endif %}
  </div>

  <div class="cmd">
    <a class="btn btn-outline" href="/">
      <i data-feather="chevron-left"></i>
      Take me back home
    </a>
  </div>
</section>
{% endblock %}
